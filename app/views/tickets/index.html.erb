<% content_for(:title, "PCM queue") %>

<section>
  <div id="button_ticket">
    <p>
      <%= link_to "New Ticket", new_ticket_path, class: "ghost-button", id: "new_link", remote: true %>
    </p>
  </div>

  <div id ="table">
    <h3>Active Tickets</h3>
    <div id="incomplete_tickets">
      <%= render @incomplete_tickets %>
    </div>

    <h3>Completed Tickets</h3>
    <div id="complete_tickets">
      <%= render @complete_tickets %>
    </div>
  </div>
</section>
